{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": [
      "vue",
      "vuex",
      "vue-router",
      "webpack-env",
      "reflect-metadata",
      "google.analytics"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@app": ["app"],
      "@app/*": ["app/*"],

      "@views": ["views"],
      "@views/*": ["views/*"],

      "@store": ["store"],
      "@store/*": ["store/*"],

      "@config": ["config"],
      "@config/*": ["config/*"],

      "@models": ["app/models"],
      "@models/*": ["app/models/*"],

      "@routes": ["routes"],
      "@routes/*": ["routes/*"],

      "@resources": ["resources"],
      "@resources/*": ["resources/*"],

      "@components": ["app/components"],
      "@components/*": ["app/components/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
