{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./public/",
    "moduleResolution": "Node",
    "baseUrl": "",
    "lib": ["esnext", "dom"],
    "types": ["vue", "vuex", "vue-router", "webpack-env", "reflect-metadata"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@app": ["app"],
      "@app/*": ["app/*"],

      "@views": ["views"],
      "@views/*": ["views/*"],

      "@store": ["store"],
      "@store/*": ["store/*"],

      "@config": ["config"],
      "@config/*": ["config/*"],

      "@models": ["app/models"],
      "@models/*": ["app/models/*"],

      "@routes": ["routes"],
      "@routes/*": ["routes/*"],

      "@resources": ["resources"],
      "@resources/*": ["resources/*"],

      "@components": ["app/components"],
      "@components/*": ["app/components/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
